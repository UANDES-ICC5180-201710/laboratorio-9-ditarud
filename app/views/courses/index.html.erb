<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table id='title' class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Code</th>
      <th>Teacher</th>
      <th>Interested</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td class="td" id="td"><%= course.title %></td>
        <td><%= course.code %></td>
        <td><%= course.teacher %></td>
        <td><%= course.interests.length %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <button type = "button" class="btn btn-link" onClick="like(this.id)" >
          <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: "btn btn-info" %>
